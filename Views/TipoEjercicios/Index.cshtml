@{
  ViewData["Title"] = "Tipo de Ejercicios";
}

<head>
    <link rel="stylesheet" href="~/css/tipoejercicios.css" asp-append-version="true" />
</head>


<div class="text-center">
  <h1 class="display-4">Tipo de Ejercicios</h1>
</div>
<!-- Button modal -->
<div class="mb-2">
  <button type="button" onclick="ListadoTipoEjercicios(); RefrescarTabla()" class="btn btn-outline-dark contenidoIndex">
    <i class="fa fa-refresh fa-spin fa-3x fa-fw" aria-hidden="true"></i>
  </button>
  <button type="button" class="btn btn-info d-grid gap-2 col-3 mx-auto btnNuevo" onclick="NuevoRegistro()" data-bs-toggle="modal" data-bs-target="#ModalTipoEjercicio">
    Nuevo Tipo de Ejercicio
  </button>
</div>



<!-- Modal Tipo ejercicios -->
<div class="modal fade" id="ModalTipoEjercicio" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTitulo"></h5>
      </div>
      <div class="modal-body">
        <form>
          <div class="mb-3">
            <input type="hidden" id="TipoEjercicioID" value="0"/>
            <label for="descripcion" class="form-label">Descripción</label>
            <input type="text" class="form-control" id="descripcion" placeholder="Nombre del tipo de actividad">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="GuardarRegistro()" class="btn btn-success" style="width: 140px;">Guardar</button>
        <button type="button" onclick="LimpiarModal()" class="btn btn-danger" style="width: 90px;" data-bs-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>

@* Tabla tipo ejercicios *@

<table class=" contenidoIndex table table-light table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th style="background-color:grey; color:white">Tipos de Ejercicios</th>
      <th style="width: 70px; background-color:rgba(8, 96, 96, 0);;"></th>
      <th style="width: 70px; background-color:rgba(8, 96, 96, 0);;"></th>
    </tr>
  </thead>
  <tbody id="tbody-tipoejercicios">
  </tbody>
</table>



@section Scripts {
  <script src="~/js/tipoejercicios-1.0.0.js"></script>
}

